<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clicked_doctor_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/clicked_dr_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#DFE1FB"
            android:gravity="center"
            android:text="Dr nyasulu Banda"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:id="@+id/message_doctor"
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="message"
                app:icon="@drawable/ic_baseline_message_24"
                app:iconGravity="start|end"
                app:iconSize="40dp" />

            <Button
                android:id="@+id/call_doctor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="call"
                app:icon="@drawable/ic_baseline_wifi_calling_24"
                app:iconGravity="start|end"
                app:iconSize="40dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>