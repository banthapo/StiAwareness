<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <Button
        android:id="@+id/sti_info_button"
        android:layout_width="240dp"
        android:layout_height="61dp"
        android:backgroundTint="#FFFFFF"
        android:text="STI Information"
        android:textColor="#DA5187E4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/random_search"
        app:layout_constraintVertical_bias="0.329" />

    <Button
        android:id="@+id/counselling_button"
        android:layout_width="240dp"
        android:layout_height="57dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#FFFFFF"
        android:text="Counselling"
        android:textColor="#DA5187E4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/sti_info_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sti_info_button"
        app:layout_constraintTop_toBottomOf="@+id/sti_info_button" />

    <ImageView
        android:id="@+id/from_awareness"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic" />

    <EditText
        android:id="@+id/random_search"
        android:layout_width="341dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="60dp"
        android:ems="10"
        android:hint="Search"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from_awareness" />

    <ImageButton
        android:id="@+id/random_search_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/random_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/random_search"
        app:layout_constraintTop_toTopOf="@+id/random_search"
        app:srcCompat="@drawable/ic_baseline_search_24" />

</androidx.constraintlayout.widget.ConstraintLayout>